<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="com.destack.hwmonitor.data.LogicalProcessor" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/rounded_rectangle_white"
        android:baselineAligned="false"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp"
        android:paddingHorizontal="8dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logical Core"
                android:textAlignment="center"
                android:textColor="@color/greyHint"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/format_cpu_number(viewmodel.processorID)}"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ProgressBar
                android:id="@+id/cpu_usage_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_marginBottom="-8dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="@{viewmodel.usage}"
                android:progressTint="@color/colorPrimary"
                android:scaleY="3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stat_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_current"
                    android:textAlignment="center"
                    android:textColor="@color/greyHint"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/cpu_usage_current_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/format_cpu_usage(viewmodel.usage)}"
                    android:textAlignment="center" />

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="25dp"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_min"
                    android:textAlignment="center"
                    android:textColor="@color/greyHint"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/cpu_usage_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/format_cpu_usage(viewmodel.usageMin)}"
                    android:textAlignment="center" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="25dp"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_max"
                    android:textAlignment="center"
                    android:textColor="@color/greyHint"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/cpu_usage_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/format_cpu_usage(viewmodel.usageMax)}"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>